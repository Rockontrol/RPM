<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- 定义标题栏样式 -->
	<style name="titleStyle" parent="android:Theme">
	    <item name="android:windowTitleBackgroundStyle">@style/titleBackground</item>
	    <item name="android:windowTitleSize">@dimen/title_height</item>
	</style>
	
	<style name="titleBackground">
	    <item name="android:background">@drawable/image_background</item>
	</style>
	
	<!-- 标签按钮定义 -->
	<style name="btn_base">
         <item name="android:button">@null</item>
         <item name="android:background">@null</item>     
    </style>
	
	<!-- 选项卡按钮 -->
	<style name="tabBtn" parent="btn_base">
	    <item name="android:gravity">center</item>
	    <item name="android:paddingTop">5dp</item>
	    <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_btn_colors</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>        
	</style>
	
	<!-- 默认按钮样式 -->
	<style name="defaultBtn" parent="btn_base">
	    <item name="android:textSize">18sp</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:background">@drawable/btn_default_selector</item>
	</style>
	
</resources>
